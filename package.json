{
  "name": "rtmp-camera-save",
  "version": "0.0.1",
  "description": "Saves RTSP feeds from IP cameras",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outdir=dist --format=esm --platform=node --packages=external",
    "dev": "npm run build -- --watch",
    "format": "npm run prtr -- --write",
    "init": "cp -v scripts/hooks/* .git/hooks/",
    "lint": "concurrently --kill-others-on-fail --prefix-colors auto 'npm:lint:*'",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:prettier": "npm run prtr -- --check",
    "prtr": "NODE_OPTIONS='--experimental-strip-types' NODE_NO_WARNINGS='1' prettier *.ts **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/relicode/rtmp-camera-save.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/relicode/rtmp-camera-save/issues"
  },
  "homepage": "https://github.com/relicode/rtmp-camera-save#readme",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "concurrently": "9.1.2",
    "esbuild": "0.25.4",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "prettier": "3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "dependencies": {
    "chalk": "5.4.1",
    "fluent-ffmpeg": "^2.1.3"
  }
}
